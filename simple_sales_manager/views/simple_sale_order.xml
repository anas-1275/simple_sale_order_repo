<odoo>
    <record id="simple_sale_order_view_tree" model="ir.ui.view">
        <field name="name">Simple Sale Order Tree</field>
        <field name="model">simple.sale.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="state"   
                decoration-success="state == 'done'" 
                decoration-info="state == 'confirmed'" 
                decoration-muted="state == 'draft'"/>
                <field name="order_date"/>
                <field name="total_amount" optional="1"/>
            </tree>
        </field>
    </record>

    <record id="simple_sale_order_view_form" model="ir.ui.view">
        <field name="name">Simple Sale Order Form</field>
        <field name="model">simple.sale.order</field>
        <field name="arch" type="xml">
            <form>
                                    <button name="draft_action" type="object" class="btn-primary" string="Draft" invisible="state == 'draft'"/>
                                    <button name="confirmed_action" type="object" class="btn-primary" string="Confirmed" invisible="state == 'done' or state == 'confirmed'"/>
                                    <button name="done_action" type="object" class="btn-primary" string="Done" invisible="state == 'draft' or state == 'done'"/>
                                    <br/>
                                    <br/>
                <sheet>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                    </header>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="GENERAL INFO">
                            <field name="customer_id"/>
                            <field name="order_date"/>
                            <field name="currency_id"/>
                        </group>
                        <group string="ADDTIONAL INFO">
                            <field name="user_id"/>
                            <field name="state"/> 
                            <field name="total_amount"/> 
                             
                        </group>
                    </group>
                    <notebook>
                        
                        <page string="Order Line" >
                            <field name ="line_ids">
                                <tree editable="bottom">
                                   <!-- <field name="order_id" widget="many2many_tags"/> -->
                                   <field name="product_id"/>
                                   <field name="currency_id"/>
                                   <field name="quantity"/>
                                   <field name="price_unite"/>
                                   <field name="subtotal"/>

                                </tree>
                            </field>
                        </page>
                        <page string="Note">
                            <field name="note"/>
                        </page>
                        
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="simple_sale_order_view_search" model="ir.ui.view">
        <field name="name">Simple Sale Order search</field>
        <field name="model">simple.sale.order</field>
        <field name="arch" type="xml">
            <search>
                <filter name="state" string="Is Draft" domain="[('state','=','draft')]" />
                <filter name="state" string="Is Confirmed" domain="[('state','=','confirmed')]" />
                <filter name="group_customer" string="Customer" context="{'group_by':'customer_id'}" />
  
            </search>
        </field>
    </record>

    <record id="change_state_from_draft_to_confirm" model="ir.actions.server">
        <field name="name">Change State From Draft To Confirm</field>
        <field name="model_id" ref="model_simple_sale_order"/>
        <field name="binding_model_id" ref="model_simple_sale_order"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = records.change_state_from_draft_to_confirm()
        </field>
    </record>



    <record id="simple_sale_order_action" model="ir.actions.act_window">
        <field name="name">Simple Sale Order</field>
        <field name="res_model">simple.sale.order</field>
    </record>

    <menuitem 
    id="simple_sale_order_menu"
    name="Orders"
    parent="simple_sale_order_root_menu"
    action="simple_sale_order_action"
    sequence="1"
    />
</odoo>