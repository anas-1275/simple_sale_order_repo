<odoo>
    <record id="simple_sale_order_category" model="ir.module.category">
        <field name="name">Simple Sale Order</field>
    </record>
    <record id="simple_sale_order_manager_group" model="res.groups">
        <field name="name">Simple Sale Order Manager Group</field>
        <field name="category_id" ref="simple_sales_manager.simple_sale_order_category"/>
    </record>
    <record id="simple_sale_order_user_group" model="res.groups">
        <field name="name">Simple Sale Order user Group</field>
        <field name="category_id" ref="simple_sales_manager.simple_sale_order_category"/>
    </record>

    <record id="sale_order_user_rule" model="ir.rule">
        <field name="name">Sale Order User Rule</field>
        <field name="model_id" ref="simple_sales_manager.model_simple_sale_order"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('simple_sales_manager.simple_sale_order_user_group'))]"/>
    </record>

    <record id="sale_order_manager_rule" model="ir.rule">
        <field name="name">Sale Order Manager Rule</field>
        <field name="model_id" ref="simple_sales_manager.model_simple_sale_order"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('simple_sales_manager.simple_sale_order_manager_group'))]"/>

    </record>
</odoo>